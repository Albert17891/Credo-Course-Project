@model CreditCardRequest

@{
    ViewData["Title"] = "CreditCard";
}

<h1>საკრედიტო ბარათის დამატება</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCreditCard">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="visually-hidden"></label>
                <input asp-for="UserId" class="visually-hidden" />
            </div>
            <div class="form-group">
                <label asp-for="AccountId" class="control-label"></label>
                <input asp-for="AccountId" class="form-control" />
                <span asp-validation-for="AccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNumber" class="control-label"></label>
                <input asp-for="CardNumber" class="form-control" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardExpireDate" class="control-label"></label>
                <input asp-for="CardExpireDate" class="form-control" />
                <span asp-validation-for="CardExpireDate" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Cvv" class="control-label"></label>
                <input asp-for="Cvv" class="form-control" />
                <span asp-validation-for="Cvv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pin" class="control-label"></label>
                <input asp-for="Pin" class="form-control" />
                <span asp-validation-for="Pin" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="ბარათის შექმნა" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Operator" asp-action="operator">უკან</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }