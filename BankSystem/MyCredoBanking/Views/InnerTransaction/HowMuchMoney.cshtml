@model MyCredoBanking.Models.Transaction.HowMuchMoney

@{
    ViewData["Title"] = "HowMuchMoney";
}

<h1>თანხის რაოდენობა</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="GetSecondAccount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">შეიტანე თანხის რაოდენობა</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="არჩევა" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">უკან</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
