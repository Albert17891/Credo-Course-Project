@model CredoATM.Models.ChangePin

@{
    ViewData["Title"] = "ChangePin";
}

<h1>პინის შეცვლა</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangePin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pin" class="control-label">ახალი პინი</label>
                <input asp-for="Pin" class="form-control" />
                <span asp-validation-for="Pin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="შეცვლა" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">უკან</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
