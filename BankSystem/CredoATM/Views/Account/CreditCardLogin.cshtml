@model CredoATM.Models.CreditCardLogin

@{
    ViewData["Title"] = "CreditCardLogin";
}

<h1>ბარათის შემოწმება</h1>


<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckCard">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CreditCartNumber" class="control-label">ბარათის ნომერი</label>
                <input asp-for="CreditCartNumber" class="form-control" />
                <span asp-validation-for="CreditCartNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pin" class="control-label">ბარათის პინი</label>
                <input asp-for="Pin" class="form-control" />
                <span asp-validation-for="Pin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="შემოწმება" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">უკან</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
